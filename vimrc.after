" Hide scrollbars
set guioptions-=r
set guioptions-=R
set guioptions-=l
set guioptions-=L

" Always hide the toolbar
set guioptions-=T

" Use vimux for vroom
let g:vroom_use_vimux = 1
let g:vroom_use_colors = 1

" Font Stuff
set guifont=Monaco:h12
set linespace=2

" Always show line numbers
set number

" Always show the status line
set ls=2

" Quick cycling between windows
map <c-h> <C-w>h
map <c-j> <C-w>j
map <c-k> <C-w>k
map <c-l> <C-w>l

color desert
